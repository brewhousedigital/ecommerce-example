---
layout: layouts/base.njk
title: "All Products"
permalink: /products/
---

<div class="container">
	<div class="row">
		{% for product in products %}
			<div class="col-lg-3">
				<div class="card h-100">
					<img src="{{ product.image }}" class="card-img-top" alt="{{ product.name }}">
					<div class="card-body">
						<h5 class="card-title">{{ product.name }}</h5>
						<a href="/products{{ product.url }}" class="btn btn-primary stretched-link">View</a>
					</div>
				</div>{# end card #}
			</div>{# end col #}
		{% endfor %}
	</div>{# end row #}
</div>{# end container #}
